<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.bobj.point.mapper.PointMapper">

  <select id="findById" resultType="PointVO">
    select * from points where point_id = #{pointId};
  </select>

  <select id="findByUserId" resultType="PointVO">
    select * from points where user_id = #{userId};
  </select>

  <select id="findByUserIdForUpdate" resultType="org.bobj.point.domain.PointVO">
    select *
    from points
    where user_id = #{userId} FOR UPDATE;
  </select>

  <insert id="insert" parameterType="PointVO" useGeneratedKeys="true" keyProperty="pointId">
    insert into points(user_id, amount, updated_at)
    VALUES (#{userId}, #{amount}, NOW())
  </insert>


  <update id="update" parameterType="PointVO">
    update points
    set amount = #{amount},
        updated_at = NOW()
    WHERE point_id = #{pointId}
  </update>

  <delete id="delete">
    DELETE FROM points WHERE point_id = #{pointId}
  </delete>

  <select id="findTotalPointByUserId" resultType="java.math.BigDecimal" parameterType="long">
    SELECT amount
    FROM points
    WHERE user_id = #{userId}
  </select>

  <select id="findByUserIdsForUpdate" resultType="org.bobj.point.domain.PointVO">
    SELECT *
    FROM points
    WHERE user_id IN
    <foreach item="id" collection="userIds" open="(" separator="," close=")">
      #{id}
    </foreach>
    FOR UPDATE
  </select>

  <update id="bulkUpdate">
    <foreach collection="list" item="point" separator=";">
      UPDATE points
      SET amount = #{point.amount},
      updated_at = NOW()
      WHERE point_id = #{point.pointId}
    </foreach>
  </update>
</mapper>